@model CleanArchExample.Models.RegisterModel

<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <h2 class="text-center text-dark mt-5">Register</h2>
            <div class="text-center mb-5 text-dark"></div>
            <div class="card my-5">

                <!-- Display Validation Summary -->
                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger">
                        @Html.ValidationSummary(true, "Please fix the following errors:")
                    </div>
                }

                <form class="card-body cardbody-color p-lg-5" asp-controller="Account" asp-action="Register" method="post">

                    <!-- Profile image placeholder -->
                    <div class="text-center">
                        <img src="" class="img-fluid profile-image-pic img-thumbnail rounded-circle my-3"
                             width="200px" alt="profile">
                    </div>

                    <!-- Username input field -->
                    <div class="mb-3">
                        <input type="text" class="form-control" id="Username" placeholder="User Name" asp-for="Username">
                        @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                    </div>

                    <!-- Email input field -->
                    <div class="mb-3">
                        <input type="email" class="form-control" id="Email" placeholder="Email" asp-for="Email">
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    </div>

                    <!-- Password input field -->
                    <div class="mb-3">
                        <input type="password" class="form-control" id="Password" placeholder="Password" asp-for="Password">
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                    </div>

                    <!-- Confirm Password input field -->
                    <div class="mb-3">
                        <input type="password" class="form-control" id="ConfirmPassword" placeholder="Confirm Password" asp-for="ConfirmPassword">
                        @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
                    </div>

                    <!-- First Name input field -->
                    <div class="mb-3">
                        <input type="text" class="form-control" id="FirstName" placeholder="First Name" asp-for="FirstName">
                        @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
                    </div>

                    <!-- Last Name input field -->
                    <div class="mb-3">
                        <input type="text" class="form-control" id="LastName" placeholder="Last Name" asp-for="LastName">
                        @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
                    </div>

                    <!-- Submit button -->
                    <div class="text-center">
                        <button type="submit" class="btn btn-color px-5 mb-5 w-100">Sign Up</button>
                    </div>

                    <!-- Link for existing users -->
                    <div class="form-text text-center mb-5 text-dark">
                        Already registered? <a href="@Url.Action("Login", "Account")" class="text-blue fw-bold">Login</a>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>